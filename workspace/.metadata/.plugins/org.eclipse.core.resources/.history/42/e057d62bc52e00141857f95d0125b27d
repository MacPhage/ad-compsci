import java.util.Scanner;


public class DayTwo 
{
	static Scanner console = new Scanner(System.in);
	public static void main(String args[])
	{
		String in = "";
		String phrase = "";
		for(;;)
		{
			System.out.println("Enter a String:");
			in = console.nextLine();
			if(in.equals("stop"))
			{
				System.out.println("Stopping...\n\n");
				break;
			}
			System.out.println("First char: "+in.charAt(0));
			System.out.println("Last char: "+in.charAt(in.length()-1));
		}
		
		
		for(;;)
		{
			System.out.println("Enter a String to search:");
			in = console.nextLine();
			System.out.println("Enter a phrase to search from it:");
			phrase = console.next();
			System.out.println("Searching for \'"+phrase+"\' in \'"+in+"\'.");
			if(in.indexOf(phrase) != -1)
			{
				System.out.println("phrase was found at "+in.indexOf(phrase));
			}
			else
			{
				System.out.println("phrase wasn\'t found in the Search String.");
			}
		}
}
